<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ServicesActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:titleTextColor="@android:color/white"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:titleTextAppearance="@style/ToolbarTitleTheme"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent">
    </androidx.appcompat.widget.Toolbar>
    <ProgressBar
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/progressBar"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dp"
        android:minHeight="30dp" />
    <ScrollView
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="@string/label_select_service"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <HorizontalScrollView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:id="@+id/horizontalScrollView">
                <LinearLayout
                    android:id="@+id/services_scroll_view"
                    android:paddingEnd="15dp"
                    android:paddingStart="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/selected_service"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/service_line"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary" />
                <TextView
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="@string/label_select_date"
                    android:textColor="@color/colorAccent"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/today_date_wrapper"
                        android:background="@drawable/date_item"
                        android:padding="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="02/07"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textSize="23sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:gravity="center_horizontal"
                            android:text="Today"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/tomorrow_date_wrapper"
                        android:background="@drawable/date_item"
                        android:padding="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="02/07"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textSize="23sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:gravity="center_horizontal"
                            android:text="Tomorrow"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/next_date_wrapper"
                        android:visibility="gone"
                        android:background="@drawable/date_item"
                        android:padding="5dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="02/07"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textSize="23sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:gravity="center_horizontal"
                            android:text="Saturday"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/custom_date_wrapper"
                        android:background="@drawable/date_item"
                        android:padding="5dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:visibility="gone"
                            android:text="@string/label_select_date"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"
                            android:textSize="23sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="@string/label_select_date"
                            android:gravity="center_horizontal"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/label_select_address"
                    android:textColor="@color/colorAccent"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="70dp"
                    android:orientation="vertical">
                    <RadioGroup
                        android:id="@+id/locationRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <RadioButton
                            android:id="@+id/radioNewAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:checked="false"
                            android:text="@string/enter_new_address"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
                        <RadioButton
                            android:id="@+id/radioCurrentAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:checked="false"
                            android:text="@string/use_current_address"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
                    </RadioGroup>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="@+id/locationRadio"
                        app:layout_constraintStart_toStartOf="@+id/locationRadio"
                        app:layout_constraintTop_toBottomOf="@id/locationRadio">
                        <EditText
                            android:id="@+id/ed_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_address"
                            android:hint="@string/label_address"
                            android:inputType="textMultiLine|textPostalAddress"
                            android:lines="3"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:imeOptions="actionNext"
                            android:scrollHorizontally="false" />
                        <EditText
                            android:id="@+id/ed_landmark"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_address"
                            android:hint="@string/label_landmark"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:imeOptions="actionNext" />
                        <EditText
                            android:id="@+id/ed_city"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_address"
                            android:hint="@string/label_city"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:imeOptions="actionNext" />
                        <EditText
                            android:id="@+id/ed_pincode"
                            android:inputType="number"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_address"
                            android:hint="@string/label_pin_code"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:imeOptions="actionNext" />
                        <Button
                            android:id="@+id/btn_book_service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/btn_bg"
                            android:text="@string/label_book_service"
                            android:textColor="@android:color/white"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>